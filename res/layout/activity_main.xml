<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.sampreeth.swissknife.MainActivity">

    <Button

        android:background="@drawable/alarm"
        android:layout_width="100dp"
        android:layout_height="100dp"

        android:id="@+id/alarm"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="13dp" />

    <Button

        android:background="@drawable/calendar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/calender"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/stopwatch"
        android:layout_marginStart="10dp" />

    <Button

        android:background="@drawable/redial"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/redial"
        android:layout_marginTop="21dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/contacts" />

    <Button
        android:background="@drawable/map"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/maps"
        android:layout_alignTop="@+id/redial"
        android:layout_alignEnd="@+id/calender" />

    <Button

        android:background="@drawable/contact"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/contacts"
        android:layout_marginTop="9dp"
        android:layout_alignTop="@+id/stopwatch"
        android:layout_alignStart="@+id/alarm" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/main_screen"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button

        android:background="@drawable/stopwatch"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/stopwatch"
        android:layout_marginStart="30dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
